<h2>登 陆</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "control-label", value: "邮 件" %><br />
    <%= f.email_field :email, autofocus: true, class: "field" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "control-label", value: "密 码" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "field" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, value:"记住密码" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "登 陆", class: "btn btn-primary" %>
  </div>
<% end %>
<div class="col-md-6">
<%= render "devise/shared/links" %>
</div>
