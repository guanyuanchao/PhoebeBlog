<div class="row">
  <div class="col-md-9 well">
    <%= link_to t('new_article'), new_article_path, :class=>"btn btn-primary" %>
    <hr/>
    <% @articles.each do |article| %>
      <div class="row">
        <span class="col-md-8 article_title" style="font-size:14px;">
          <%=link_to article.article_title, article %>
        </span>
        <span class="col-md-2" style="padding-top:12px;">
          <%= article.created_at.strftime("%Y-%m-%d")%>
        </span>
        <span class="col-md-2" >
          <div class="btn-group">
            <button type="button" class="btn btn-default btn-sm">编辑</button>
            <button type="button" class="btn btn-default dropdown-toggle btn-sm" data-toggle="dropdown">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to t("show_article"), article %></li>
              <li><%= link_to t('edit_article'), edit_article_path(article) %></li>
              <li><%= link_to t('delete_article'), article, method: :delete, data: { confirm: t('delete_article_message') } %></li>
            </ul>
          </div>
        </span>
      </div>
    <% end %>
    <!--<div id="articles_paginator" ></div>-->
    <%= will_paginate(@articles, renderer:  BootstrapPagination::Rails, previous_label: t("Previous_page"), next_label: t("Next_page")) %>
  </div>
  <div class="col-md-3">
    this is test zone
  </div>
</div>
<script type="text/javascript" src="javascripts/bootstrap-paginator.js"></script>
<script type="text/javascript">
  var options = {
    currentPage:3,
    totalPages:10
  }
  $('#articles_paginator').bootstrapPaginator(options);
</script>



